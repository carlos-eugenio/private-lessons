{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="/students/create">Novo</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Estudante</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </tr>    
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{student.avatar_url}})"></span>
                    {{student.name}}
                </td>
                <td>{{student.skills}}</td>
                <td><a href="/students/{{ student.id }}">Acessar</a></td>
            </tr>
            {% endfor %}    
        </tbody>        
    </table>    
</div>

{% endblock content %}