{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/332741) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>
        <div class="item">
            <div>Nome</div>
            <div>{{ data.name }}</div>
        </div>
        <div class="item">
            <div>Idade</div>
            <div>{{ data.age }}</div>
        </div>
        <div class="item">
            <div>Escolaridade</div>
            <div>{{ data.education }}</div>
        </div>
        <div class="item">
            <div>Tipo de aula</div>
            <div>{{ data.classes }}</div>
        </div>
        <div class="item">
            <div>Acompanhamento</div>
            <div>{{ data.services }}</div>
        </div>
        <div class="item">
            <div>Desde</div>
            <div>{{ data.created_at }}</div>
        </div>
    </section>
</div>

{% endblock content %}