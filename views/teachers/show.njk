{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>
        <div class="item">
            <div>Professor</div>
            <div>{{ teacher.name }}</div>
        </div>
        <div class="item">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>
        <div class="item">
            <div>Formação</div>
            <div>{{ teacher.education }}</div>
        </div>
        <div class="item">
            <div>Tipo de aula</div>
            <div>
                {% for service in teacher.services %}
                <span>{{ service }}</span>
                {% endfor %}
            </div>
        </div>
        <div class="item">
            <div>Área de atuação</div>
            <div>{{ teacher.skills }}</div>
        </div>
        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>
    </section> 
</div>

{% endblock content %}